<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dracula_album_dropdown_thumbnail_placeholder">

    <HorizontalScrollView
        android:id="@+id/svFrames"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/tvSelectVideo"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llFrames"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvSelectVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="#A96565"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="选视频"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>